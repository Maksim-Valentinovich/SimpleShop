<script>
    $(".button-choose-pay").click(function () {
        $.ajax({
            url: 'ChoosePayModal',
            type: 'GET',
            dataType: 'html',
            success: function (content) {
                $('#choose-pay div.modal-body').html(content);
                $('#choose-pay').modal('show')
            },
            error: function (e) { }
        })
    })
</script>

<script>
    $(document).ready(function () {
        $.ajax({
            url: 'Product',
            type: 'GET',
            dataType: 'html',
            success: function (content) {
                $('#additional div.partial-content').html(content);
            },
            error: function (e) { }
        });
    })
</script>


            phone: $("#phone").val(),
            email: $("#firstname").val(),
        };
        $.ajax({
            url: 'Registration?model=' + data,
            type: 'POST',
            dataType: 'html',
            success: function () {

            },
            error: function (e) { }ё
        });
    });
</script>


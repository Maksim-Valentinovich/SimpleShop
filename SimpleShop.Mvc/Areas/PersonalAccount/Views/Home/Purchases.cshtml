@using SimpleShop.Mvc.ViewsModels;
@model ClientViewModel

@{
    ViewData["Title"] = "Account";
}

<div class="account">
    <div class="account-menu">
        <div class="menu-point">
            <button class="btn navbar-account"><i class="fa-solid fa-address-card"></i><a asp-area="" asp-controller="Client" asp-action="Index">МОЙ ПРОФИЛЬ</a> </button>
        </div>
        <div class="menu-point">
            <button class="btn navbar-account"><i class="fa-solid fa-basket-shopping"></i><a asp-area="" asp-controller="Client" asp-action="Purchases">МОИ ПОКУПКИ</a> </button>
        </div>
        <div class="menu-point">
            <button class="btn navbar-account"><i class="fa-solid fa-circle-info"></i><a asp-area="" asp-controller="Client" asp-action="Help">ПОМОЩЬ</a> </button>
        </div>
    </div>

    <div class="account-content">
        <div class="account-user-about">
            <div class="user-about-name">@Model.Name @Model.Surname<p><span>@Model.Phone</span></p></div>
            <div class="account-user-exit">
                <button class="btn navbar-account"><a asp-area="" asp-controller="Home" asp-action="Index">Выйти</a><i class="fa-solid fa-right-from-bracket"></i> </button>
            </div>
        </div>

        <div class="account-personal">
            <div class="account-personal-chapter">АБОНЕМЕНТЫ</div>
            <hr />
            <div class="button-wrapper">
                <button type="submit" class="btn btn-primary"> <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="index">Купить</a></button>
            </div>
        </div>

        <div class="account-personal">
            <div class="account-personal-chapter">ДОПОЛНИТЕЛЬНЫЕ УСЛУГИ</div>
            <hr />
            <div class="button-wrapper">
                <button type="submit" class="btn btn-primary"> <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Training">Купить</a></button>
            </div>
        </div>

        <div class="account-personal">
            <div class="account-personal-chapter">ТРЕНИРОВКИ</div>
            <hr />
            <div class="button-wrapper">
                <button type="submit" class="btn btn-primary"> <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Training">Купить</a></button>
            </div>
        </div>
    </div>
</div>
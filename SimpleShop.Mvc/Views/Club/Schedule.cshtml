                    <div class="time-lesson">Body sculpt</div>
                    <div class="time-lesson"></div>
                    <div class="time-lesson"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" tabindex="-1" id="choose-city">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Выберите клуб</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/jquery.min.js"></script>
<script>
    $(".change-city").click(function () {
        $.ajax({
            url: 'Home/ChooseCityModal',
            type: 'GET',
            dataType: 'html',
            success: function (content) {
                $('#choose-city div.modal-content').html(content);
                $('#choose-city').modal('show');
            },
            error: function (e) { }
        })
    })
</script>

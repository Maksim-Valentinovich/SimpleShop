<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimpleShop.Mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
  @*<link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> *@
    <link href="https://fonts.googleapis.com/css2?family=Oxygen:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css"/>
    <link rel="stylesheet" href="~/lib/air-datepicker/css/datepicker.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  @*<link rel="stylesheet" href="~/SimpleShop.Mvc.styles.css" asp-append-version="true" /> *@

</head>


<body>
    @{await Html.RenderPartialAsync("_Header");}

    <div class="container">
        <main role="main" @* class="pb-3" *@>
            @RenderBody()
        </main>
    </div>
    @{await Html.RenderPartialAsync("_Footer");}

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/air-datepicker/js/datepicker.js"></script>
@*     <script src="~/js/site.js" asp-append-version="true"></script> *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

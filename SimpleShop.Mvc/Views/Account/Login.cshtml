@model SimpleShop.Mvc.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="sign">
    <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="mb-3">
                <label asp-for="Email">Адрес эл. почты</label><br />
                <input type="text" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" />
                <div id="emailHelp" class="form-text">Мы никогда не передадим вашу электронную почту кому-либо еще.</div>
            </div>

            <div class="mb-3">
                <label asp-for="Password">Пароль</label><br />
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" />
            </div>

            <div class="button-wrapper">
                <input type="submit" class="btn btn-primary" value="Вход" />
            </div>

            <div class="dropdown-divider"></div>
            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">Здесь что то новое? Зарегистрироваться</a>
            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Reset">Забыли пароль?</a>
        </div>
    </form>
</div>


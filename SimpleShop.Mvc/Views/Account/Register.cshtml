@model SimpleShop.Mvc.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/air-datepicker.css" />
<div class="join">
   <div class="join-form">
        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="col-12">
                    <label asp-for="Name">Имя</label><br />
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" />
                </div>
                <div class="col-12">
                    <label asp-for="Surname">Фамилию</label><br />
                    <input type="text" class="form-control" asp-for="Surname" />
                    <span asp-validation-for="Surname" />
                </div>
                <div class="col-12">
                    <label asp-for="Patronymic">Отчество</label><br />
                    <input type="text" class="form-control" asp-for="Patronymic" />
                    <span asp-validation-for="Patronymic" />
                </div>
                <div class="col-12">
                    <label asp-for="Phone">Номер телефона</label><br />
                    <input type="text" class="form-control" asp-for="Phone" />
                    <span asp-validation-for="Phone" />
                </div>

                <div class="col-12">
                    <label asp-for="Birthday">Дата рождения</label><br />
                    <input type="date" class="form-control" id="airdatepicker" asp-for="Birthday" />
                    <span asp-validation-for="Birthday"/>
                </div>

                <div class="col-12">
                    <label asp-for="Email">Адрес эл. почты</label><br />
                    <input type="text" class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email" />
                </div>
                <div class="col-12">
                    <label asp-for="Password">Придумайте пароль</label><br />
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="col-12">
                    <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" />
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" asp-for="IsMan" value="true">
                    <label class="form-check-label" for="flexRadioDefault1">
                        Мужской
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" asp-for="IsMan" value="false" checked>
                    <label class="form-check-label" for="flexRadioDefault2">
                        Женский
                    </label>
                </div>
                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">Я ознакомлен(-на) и согласен(-на) с условиями Договора,  Правилами техники безопасности, <a asp-area="" asp-controller="Home" asp-action="Privacy">Правилами Клуба</a> и даю свое согласие  на обработку персональных данных.</label>
                    </div>
                </div>
                <div class="col-12">
                    <input type="submit" class="btn btn-primary" value="Регистрация" />
                </div>
            </div>
        </form>
   </div>
</div>
<script src="~/js/air-datepicker.js"></script>
<script>new AirDatepicker('#airdatepicker');</script>